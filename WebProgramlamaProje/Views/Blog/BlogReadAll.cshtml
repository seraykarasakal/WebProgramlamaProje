<!DOCTYPE html>
<html lang="zxx">
<body>
	<!--//banner-->
	<section class="banner-bottom">
		<!--/blog-->
		<div class="container">
			<div class="row">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					@foreach (var item in Model)
					{
					<div class="blog-grid-top">
						<div class="b-grid-top">
							<div class="blog_info_left_grid">
								<a href="single.html">
									<img src="@item.BlogImage" class="img-fluid" alt="">
								</a>
							</div>
							<div class="blog-info-middle">
								<ul>
									<li>
										<a href="#">
												<i class="far fa-calendar-alt" style="color:#3399ff"></i> @item.BlogCreateDate>
											</a>
									</li>
									<li class="mx-2">
										<a href="#">
												<i class="far fa-thumbs-up " style="color:#3399ff"></i> 10 Beğeni
											</a>
									</li>
									<li>
										<a href="#">
												<i class="far fa-comment" style="color:#3399ff"></i>0 Yorum
											</a>
									</li>
									
								</ul>
							</div>
						</div>
						<h3>
							<a href="single.html">@item.BlogTitle</a>
						</h3>
						<p>
							@item.BlogContent
						</p>
							<a href="/Blog/Index/" class="btn btn-primary read-m" style="background-color:#3399ff" >Blog Listesi</a>
					</div>
					}

					@await Component.InvokeAsync("CommentListByBlog",new{ id = ViewBag.i })
					@*@await Html.PartialAsync("~/Views/Comment/CommentListByBlog.cshtml")*@

					@await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")

				</div>

				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						<div class="tech-btm">
							<img src="~/CoreBlogTema/web/images/banner1.jpg" class="img-fluid" alt="">
						</div>
						<h4>Mail Bülteni abone ol</h4>
						@await Html.PartialAsync("~/Views/NewsLetter/SubScribeMail.cshtml")
						
						@await Component.InvokeAsync("CategoryList")

						@await Component.InvokeAsync("WriterLastBlog")

						@*<div class="single-gd tech-btm">
							<h4>Son Eklenen Post</h4>
							<div class="blog-grids">
								<div class="blog-grid-left">
									<a href="single.html">
										<img src="~/CoreBlogTema/web/images/b1.jpg" class="img-fluid" alt="">
									</a>
								</div>
								<div class="blog-grid-right">

									<h5>
										<a href="single.html">Pellentesque dui, non felis. Maecenas male</a>
									</h5>
								</div>
								<div class="clearfix"> </div>
							</div>
						</div>*@
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>
	<!--//main-->

</body>

</html>
