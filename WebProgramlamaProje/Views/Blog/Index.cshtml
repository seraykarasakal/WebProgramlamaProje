@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle" style="color:#3399ff">Bloglar</h3>
        <div class="inner-sec">
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
							<a href="/Blog/BlogReadAll/@item.BlogID/">
								<img src="@item.BlogImage" class="card-img-top img-fluid" alt="" style="background-color:#b3e0ff">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <i class="fas fa-arrow-circle-down" style="color:#3399ff"></i> @item.Category.CategoryName
                                    </li>
                                    <li>
										<i class="far fa-calendar-alt" style="color:#3399ff"></i> @item.BlogCreateDate
                                    </li>
                                </ul>
                                <h5 class="card-title">
									<a href="/Blog/BlogReadAll/@item.BlogID/">@item.BlogTitle</a>
                                </h5>
								<p class="card-text mb-3">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 130).LastIndexOf(" "))...</p>
								<a href="/Blog/BlogReadAll/@item.BlogID/" class="btn btn-dark read-m">Devamını Oku</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
